<div class="container p4-">
    <div class="row">
        <div class="col-md-4"></br>
            <div class="card">
                <div class="card-body">
                    <form action="" method="POST">
                        <div class="form-gourp">
                            <h1>Registrar</h1>
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Agregue su nombre" type="text" name="nombre" id="">
                        </div>
                        </br>
                        <div class="form-group">
                            <input class="form-control" placeholder="Agregue su apellido " type="text" name="apellido" id="">
                        </div>
                        </br>
                        <div class="form-group">
                            <input class="form-control" placeholder="Agregue su edad" type="text" name="edad" id="">
                        </div>
                        </br>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h1>usuarios</h1>
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">id</th>
                            <th scope="col">nombre</th>
                            <th scope="col">apellido</th>
                            <th scope="col">edad</th>
                            <th scope="col">opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each usuarios}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{nombre}}</td>
                            <td>{{apellido}}</td>
                            <td>{{edad}}</td>
                            <td>
                                <a href="delete/{{id}}" class="btn btn-danger">Eliminar</a>
                                <a href="modificar/{{id}}" class="btn btn-info">Modificar</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                </tbody>
                </table>
            </div>
        </div>
    </div>
</div>